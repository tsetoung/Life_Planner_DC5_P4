<!DOCTYPE html>
<html>
<head>
  <title>LifePlanner</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application','http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="sidebar">
    <div id="logo">
      <%= link_to root_path do %>
        <!-- <%= image_tag "J_logo.png" %> -->
        <% end %>
    </div>
      <ul>
        <li class="category">Website</li>
        <li><%= link_to "Goals", root_path %></li>
        <li><%= link_to "About", about_path %></li>
      </ul>

      <ul>
        <li class="category">Social</li>
        <li><a href="https://github.com/tsetoung">Github</a></li>
      </ul>

      <p class="sign_in">Admin Login</p>
  </div>

  <div id="main_content">
    <div id="header">
        <% if current_page?(root_path) %>
            <p>All Goals</p>
        <% elsif current_page?(about_path) %>
            <p>About</p>
        <% else %>
            <%= link_to "Back to All Goals", root_path %>
        <% end %>

      <div class="buttons">
        <button class="button"><%= link_to "New Goal", new_post_path %></button>
        <button class="button">Log Out</button>
      </div>
    </div>

      <% flash.each do |name, msg| %>
      <%= content_tag(:div, msg, class: "alert") %>
      <% end %>

    <%= yield %>
  </div>



</body>
</html>
